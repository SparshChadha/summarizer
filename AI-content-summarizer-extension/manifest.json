{
    "manifest_version": 3,
    "name": "AI Content Summarizer",
    "version": "1.0",
    "description": "Summarize content from URLs or uploaded files.",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  